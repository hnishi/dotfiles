# スクロール行数
defscrollback 10000

# マウススクロール有効
termcapinfo xterm* ti@:tenwait 0

# いきなりScreen死んでもプロセスを残す
autodetach on

#Color
defbce on@

#vimを使った後などバッファに残す
altscreen off

#ログファイルの書式を定義
logfile "screen-%Y%m%d-%n.log"
deflog flush secs #ログファイルバッファをファイルシステムにフラッシュするまでの待ち時間
deflog on #automatic log --> on

